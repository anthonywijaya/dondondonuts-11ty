---
layout: default
eleventyExcludeFromCollections: true
---

<div class="mx-auto w-full max-w-7xl lg:px-8">
  <div class="relative px-4 sm:px-8 lg:px-12">
    <div class="mx-auto max-w-2xl lg:max-w-5xl">
      <h1 class="text-3xl font-bold mb-8">Manage Discounts</h1>

      <form x-data="{
        discounts: {{ discounts | dump | safe }},
        newQuantity: '',
        newDiscount: '',
        addDiscount() {
          if (this.newQuantity && this.newDiscount) {
            this.discounts[this.newQuantity] = parseInt(this.newDiscount);
            this.newQuantity = '';
            this.newDiscount = '';
            this.saveDiscounts();
          }
        },
        removeDiscount(quantity) {
          delete this.discounts[quantity];
          this.saveDiscounts();
        },
        saveDiscounts() {
          fetch('/api/save-discounts', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(this.discounts),
          }).then(response => response.json())
            .then(data => {
              if (data.success) {
                alert('Discounts saved successfully');
              } else {
                alert('Error saving discounts');
              }
            });
        }
      }" @submit.prevent="addDiscount" class="space-y-6">
        <div>
          <h2 class="text-2xl font-semibold mb-4">Current Discounts</h2>
          <template x-for="(discount, quantity) in discounts" :key="quantity">
            <div class="flex items-center space-x-4 mb-2">
              <span x-text="`${quantity} items: Rp. ${discount.toLocaleString('en-US')}`"></span>
              <button @click="removeDiscount(quantity)" type="button" class="text-red-600">Remove</button>
            </div>
          </template>
        </div>

        <div>
          <h2 class="text-2xl font-semibold mb-4">Add New Discount</h2>
          <div class="flex items-center space-x-4">
            <input type="number" x-model="newQuantity" placeholder="Quantity" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            <input type="number" x-model="newDiscount" placeholder="Discount Amount" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            <button type="submit" class="bg-dondonorange text-dondonwhite py-2 px-4 rounded-md hover:bg-orange-600 transition duration-300">Add Discount</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>